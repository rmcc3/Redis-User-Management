<h1>Create a User</h1>
{{#if error}}
    <span>{{error}}</span>
{{/if}}
<form class="form" method="post" action="/users/add">
    <div class="form-group">
        <label>ID</label>
        <input type="text" name="id" class="form-control" placeholder="Add ID">
    </div>
    <div class="form-group">
        <label>First Name</label>
        <input type="text" name="first_name" class="form-control" placeholder="First name">
    </div>
    <div class="form-group">
        <label>Last name</label>
        <input type="text" name="last_name" class="form-control" placeholder="Last name">
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" name="email" class="form-control" placeholder="Email">
    </div>
    <div class="form-group">
        <label>Phone Number</label>
        <input type="text" name="phone" class="form-control" placeholder="555-555-555">
    </div>
    <input type="submit" class="btn btn-primary" value="Save User">
</form>